<?xml version="1.0"?>
<robot name="rb1_robot">

  <!-- Simple URDF materials (used by RViz/URDF); Gazebo visual is set via <gazebo reference> below -->
  <material name="blue"><color rgba="0 0 1 1"/></material>
  <material name="gray"><color rgba="0.40 0.40 0.40 1"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>

  <!-- Base footprint -->
  <link name="base_footprint"/>

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <mass value="20.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.46710" ixy="0" ixz="0" iyy="0.46710" iyz="0" izz="0.63125"/>
    </inertial>
    <collision>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder radius="0.25" length="0.30"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- base_footprint â†” base_link -->
  <joint name="base_link_plate_joint" type="fixed">
    <parent link="base_footprint"/>
    <child  link="base_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Front caster -->
  <link name="front_caster">
    <inertial>
      <mass value="0.9"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00032400" ixy="0" ixz="0" iyy="0.00032400" iyz="0" izz="0.00032400"/>
    </inertial>

    <!-- Caster wheel support -->
    <collision>
      <origin xyz="0 0 0.0185" rpy="0 0 0"/>
      <geometry><sphere radius="0.03"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.0185" rpy="0 0 0"/>
      <geometry><sphere radius="0.03"/></geometry>
      <material name="gray"/>
    </visual>

    <!-- Caster wheel -->
    <collision>
      <origin xyz="0 0 0.0125" rpy="0 0 0"/>
      <geometry><sphere radius="0.025"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.0125" rpy="0 0 0"/>
      <geometry><sphere radius="0.025"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_link_front_caster_joint" type="fixed">
    <origin xyz="0.1 0 -0.1625" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="front_caster"/>
  </joint>

  <!-- Back caster -->
  <link name="back_caster">
    <inertial>
      <mass value="0.9"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00032400" ixy="0" ixz="0" iyy="0.00032400" iyz="0" izz="0.00032400"/>
    </inertial>

    <!-- Caster wheel support -->
    <collision>
      <origin xyz="0 0 0.0185" rpy="0 0 0"/>
      <geometry><sphere radius="0.03"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.0185" rpy="0 0 0"/>
      <geometry><sphere radius="0.03"/></geometry>
      <material name="gray"/>
    </visual>

    <!-- Caster wheel -->
    <collision>
      <origin xyz="0 0 0.0125" rpy="0 0 0"/>
      <geometry><sphere radius="0.025"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.0125" rpy="0 0 0"/>
      <geometry><sphere radius="0.025"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_link_back_caster_joint" type="fixed">
    <origin xyz="-0.1 0 -0.1625" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="back_caster"/>
  </joint>

  <!-- Left wheel -->
  <link name="link_left_wheel">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00028958" ixy="0" ixz="0" iyy="0.00031250" iyz="0" izz="0.00028958"/>
    </inertial>

    <!-- Tire (centered) -->
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.04" radius="0.025"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.04" radius="0.025"/></geometry>
      <material name="red"/>
    </visual>

    <!-- Axle (centered) -->
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.06" radius="0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.06" radius="0.01"/></geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="joint_base_left_wheel" type="continuous">
    <origin xyz="0 0.2 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="link_left_wheel"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
  </joint>

  <!-- Right wheel -->
  <link name="link_right_wheel">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00028958" ixy="0" ixz="0" iyy="0.00031250" iyz="0" izz="0.00028958"/>
    </inertial>

    <!-- Tire (centered) -->
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.04" radius="0.025"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.04" radius="0.025"/></geometry>
      <material name="red"/>
    </visual>

    <!-- Axle (centered) -->
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.06" radius="0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.06" radius="0.01"/></geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="joint_base_right_wheel" type="continuous">
    <origin xyz="0 -0.2 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="link_right_wheel"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
  </joint>

  <!-- Laser link -->
  <link name="front_laser">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Box 0.06 x 0.06 x 0.08 m -->
      <inertia ixx="0.00083333" ixy="0" ixz="0" iyy="0.00083333" iyz="0" izz="0.00060000"/>
    </inertial>
  </link>

  <joint name="base_link_front_laser_joint" type="fixed">
    <origin xyz="0.25 0.0 0.075" rpy="3.14159265 0 0"/>
    <parent link="base_link"/>
    <child  link="front_laser"/>
  </joint>

  <!-- ===== Gazebo Classic bits ===== -->

  <!-- Visual materials in Gazebo Classic -->
  <gazebo reference="base_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="link_left_wheel">
    <!-- friction/contact tuned for drive traction -->
    <mu1 value="5.0"/>
    <mu2 value="0.5"/>
    <kp  value="10000000.0"/>
    <kd  value="1.0"/>
    <fdir1 value="1 0 0"/>
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="link_right_wheel">
    <mu1 value="5.0"/>
    <mu2 value="0.5"/>
    <kp  value="10000000.0"/>
    <kd  value="1.0"/>
    <fdir1 value="1 0 0"/>
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="front_caster">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp  value="10000000.0"/>
    <kd  value="100.0"/>
    <fdir1 value="0 0 1"/>
    <material>Gazebo/Gray</material>
  </gazebo>

  <gazebo reference="back_caster">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp  value="10000000.0"/>
    <kd  value="100.0"/>
    <fdir1 value="0 0 1"/>
    <material>Gazebo/Gray</material>
  </gazebo>

  <!-- Differential Drive plugin (Gazebo Classic, ROS) -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>joint_base_left_wheel</leftJoint>
      <rightJoint>joint_base_right_wheel</rightJoint>
      <wheelSeparation>0.4</wheelSeparation>
      <wheelDiameter>0.05</wheelDiameter>
      <torque>10</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>true</publishWheelTF>
    </plugin>
  </gazebo>

  <!-- Laser sensor (ray) + ROS laser plugin -->
  <gazebo reference="front_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle> 1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.20</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>scan</topicName>
        <frameName>front_laser</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>
